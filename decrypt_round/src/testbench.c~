#define ORDER 16#include <signal.h>
#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>
#include <pthread.h>
#include <pthreadUtils.h>
#include <Pipes.h>
#include <pipeHandler.h>
#ifndef SW
#include "vhdlCStubs.h"
#endif

#define ORDER 16

uint32_t sent_values[ORDER];
uint32_t key_values[ORDER];

void Exit(int sig)
{
	fprintf(stderr, "## Break! ##\n");
	exit(0);
}

	
void Sender()
{
	int idx;
	
	for(idx = 0; idx < ORDER; idx++)
	{
		uint32_t r = rand();
		//uint32_t k = rand();
		sent_values[idx] = r;
		//key_values[idx] = k;
		
	}
	write_uint32_n("in_data",sent_values,ORDER);
	//write_uint32_n("key",key_values,ORDER);
}

void Sender_key()
{
	int idx;
	
	for(idx = 0; idx < ORDER; idx++)
	{
		//uint32_t r = rand();
		uint32_t k = rand();
		//sent_values[idx] = r;
		key_values[idx] = k;
		
	}
	//write_uint32_n("in_data",sent_values,ORDER);
	write_uint32_n("key",key_values,ORDER);
}

DEFINE_THREAD(Sender)

DEFINE_THREAD(Sender_key)

int main(int argc, char* argv[])
{
	uint32_t result[ORDER];
	signal(SIGINT,  Exit);
  	signal(SIGTERM, Exit);

	PTHREAD_DECL(Sender);
	PTHREAD_CREATE(Sender);
	
	PTHREAD_DECL(Sender_key);
	PTHREAD_CREATE(Sender_key);

	uint8_t idx;
	
	read_uint32_n("out_data",result,ORDER);

	for(idx = 0; idx < ORDER; idx++)
	{
		fprintf(stdout,"Result = %x, Sent = %x, Key = %x.\n", result[idx],sent_values[idx],key_values[idx]);
	}
	PTHREAD_CANCEL(Sender);
	PTHREAD_CANCEL(Sender_key);
	return(0);
}

uint32_t sent_values[ORDER];
uint32_t key_values[ORDER];

void Exit(int sig)
{
	fprintf(stderr, "## Break! ##\n");
	exit(0);
}

	
void Sender()
{
	int idx;
	
	for(idx = 0; idx < ORDER; idx++)
	{
		uint32_t r = rand();
		uint32_t k = rand();
		sent_values[idx] = r;
		key_values[idx] = k;
		
	}
	write_uint32_n("in_data",sent_values,ORDER);
	write_uint32_n("key",key_values,ORDER);
}

DEFINE_THREAD(Sender)

int main(int argc, char* argv[])
{
	uint32_t result[ORDER];
	signal(SIGINT,  Exit);
  	signal(SIGTERM, Exit);

	PTHREAD_DECL(Sender);
	PTHREAD_CREATE(Sender);

	uint8_t idx;
	
	read_uint32_n("out_data",result,ORDER);

	for(idx = 0; idx < ORDER; idx++)
	{
		fprintf(stdout,"Result = %x, Sent = %x, Key = %x.\n", result[idx],sent_values[idx],key_values[idx]);
	}
	PTHREAD_CANCEL(Sender);
	return(0);
}
